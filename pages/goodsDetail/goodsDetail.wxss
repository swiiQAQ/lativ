/* pages/goodsDetail/goodsDetail.wxss */

.gallerySwiperWrap {
  position: relative;
}

.gallerySwiper {
  width: 100%;
  height: 750rpx;
  position: relative;
}

.gallerySwiper image {
  width: 100%;
  height: 750rpx;
}

.gallerySwiperWrap .galleryPagination {
  width: 100rpx;
  height: 48rpx;
  background: #888;
  border-radius: 6rpx;
  position: absolute;
  top: 88%;
  left: 82%;
  color: #fff;
  font-size: 26rpx;
  line-height: 48rpx;
  text-align: center;
}
.productBasicInfo{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
.productBasicInfo .productName{
  font-size: 36rpx;
}
.productBasicInfo .productId{
  font-size: 28rpx;
  margin-top: 20rpx;
}
