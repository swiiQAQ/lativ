/* pages/goodsDetail/goodsDetail.wxss */

.productScrollArea {
  background: #f7f7f7;
}

.gallerySwiperWrap {
  position: relative;
}

.gallerySwiper {
  width: 100%;
  height: 750rpx;
  position: relative;
}

.gallerySwiper image {
  width: 100%;
  height: 750rpx;
}

.gallerySwiperWrap .galleryPagination {
  width: 100rpx;
  height: 48rpx;
  background: #888;
  border-radius: 6rpx;
  position: absolute;
  top: 88%;
  left: 82%;
  color: #fff;
  font-size: 26rpx;
  line-height: 48rpx;
  text-align: center;
}

.productBasicInfo {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1px solid #eaeaea;
  background: #fff;
}

.productBasicInfo .productName {
  font-size: 36rpx;
}

.productBasicInfo em {
  font-size: 28rpx;
  color: #888;
}

.productBasicInfo .productId {
  /* font-size: 28rpx; */
  margin-top: 15rpx;
}

.productBasicInfo .priceInfo {
  margin-top: 20rpx;
}

.productService {
  height: 100rpx;
  align-items: center;
  /* line-height: 100rpx; */
  font-size: 32rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #eaeaea;
  background: #fff;
}

.tips_wrap {
  margin: 20rpx 0;
  padding: 0 30rpx;
  /* align-items:  */
  height: 140rpx;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  background: #fff;
  justify-content: center;
}

.tips_wrap text {
  color: #888;
  font-size: 28rpx;
  display: flex;
  /* justify-content: center; */
}

.tips_wrap text::before {
  content: 'Â·';
  margin-right: 12rpx;
}

.productSalesInfo {
  font-size: 30rpx;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
}

.productSalesInfo em {
  color: #f8584f;
  margin-left: 15rpx;
}
.productSalesInfo .salesInfoItem{
  border-right: 1px solid #eaeaea;
}
.productSalesInfo .salesInfoItem {
  flex-grow: 1;
  justify-content: center;
  margin: 15px 0;
  box-sizing: border-box;
  height: 40rpx;
}
.skuInfoSelectBtn{
  height: 100rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  align-items: center;
  background: #fff;
  margin: 20rpx 0;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
}
.stickyHeader{
  height: 100rpx;
  border-bottom: 1px solid #eaeaea;
  align-items: center;
  font-size: 30rpx;
  background: #fff;
}
.stickyHeader view{
  flex-grow: 1;
  text-align: center;
}
.stickyHeader view:nth-child(1){
  color: #f8584f;
}
.productPicDetail{
  padding: 0 40rpx;
}
.productPicDetail .detailTitleItem{
  font-size: 32rpx;
}
.productPicDetail image{
  width: 100%;
}