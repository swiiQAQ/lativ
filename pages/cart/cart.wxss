/* pages/cart/cart.wxss */

.cartPage {
  background: #f4f5f5;
}

.cartEmpty .cart {
  font-size: 130rpx;
  color: #666;
  text-align: center;
}

.cartEmpty {
  width: 100%;
  height: 200rpx;
  position: absolute;
  top: 50%;
  margin-top: -100rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.cartEmpty .emptyTips {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.cartEmpty .goShopBtn {
  width: 149rpx;
  border: 1px solid #bbb;
  color: #bbb;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 16rpx;
  margin-top: 70rpx;
  align-self: center;
}
