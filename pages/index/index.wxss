.searchBar{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
}
.searchNav{
  width: 700rpx;
  background: #f2f2f2;
  height: 50rpx;
  align-items: center;
  flex-direction: row;
  display: flex;
}
.searchIcon{
  margin-left: 30rpx;
  color: #A3A3A3;
}
.searchDeafaultText{
  font-size: 28rpx;
  line-height: 50rpx;
  color: #A3A3A3;
  margin-left: 20rpx;
}
.index_sortBar{
  height: 70rpx
}
.index_sortBar .sortScroll{
  height: 70rpx;
  white-space: nowrap;
  margin-top: 20rpx;
}
.sortScroll view{
  display: inline-block;
  padding: 0 45rpx;
  font-size: 28rpx;
  line-height: 70rpx;
}
.categoryShow .category_con{
  display: none;
}
.categoryShow .active{
  display: block;
}
.categoryShow image{
  width: 100%;
  height: 350rpx;
}
/* view1 */
.indexSwiper{
  width: 100%;
  height: 350rpx;
}
.nav_des{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  justify-content: space-around;
}
.nav_des text{
  font-size: 10pt
}
.nav_des .tips:before{
  margin-right: 8rpx
}
.category_grid{
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.category_grid image{
  width: 151rpx;
  height: 151rpx;
}
.category_grid text{
  font-size: 8pt;
  text-align: center;
  line-height: 12pt;
}
.category_grid .grid_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 5rpx 0;
}
.goods_list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.goods_list .goods_list_item_box{
  width: 350rpx;
  display: flex;
  margin: 12rpx;
  flex-direction: column;
}
.goods_list .goods_image{
  width: 100%;
  height: 450rpx;
  border-radius: 5rpx;
}
.goods_list .goods_des{
  display: flex;
  font-size: 11px;
  justify-content: space-between;
  margin: 8rpx 0;
}